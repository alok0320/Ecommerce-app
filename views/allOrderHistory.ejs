    <link rel="stylesheet" href="css/admin-dashboard.css">
    <style>
        .hidden {
            display: none;
        }
    </style>
</head>

<body>
    <div class="page">
        <!-- Main Navbar-->
        <header class="header">
            <nav class="navbar" style="background-color: #194342 !important;">
                <!-- Search Box-->
                <div class="search-box">
                    <button class="dismiss"><i class="icon-close"></i></button>
                    <form id="searchForm" action="#" role="search">
                        <input type="search" placeholder="What are you looking for..." class="form-control">
                    </form>
                </div>
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <!-- Navbar Header-->
                        <div class="navbar-header">
                            <!-- Navbar Brand --><a href="/" class="navbar-brand d-none d-sm-inline-block">
                                <div class="brand-text d-none d-lg-inline-block"><strong>IndiCraft</strong></div>
                                <div class="brand-text d-none d-sm-inline-block d-lg-none"><strong>BD</strong></div>
                            </a>
                            <!--  -->
                        </div>
                        <!-- Navbar Menu -->

                    </div>
                </div>
            </nav>
        </header>
        <div class="page-content d-flex align-items-stretch">
            <!-- Side Navbar -->
            <nav class="side-navbar">
                <!-- Sidebar Header-->
                <div class="sidebar-header d-flex align-items-center">

                    <div class="title">
                        <h1 class="h4"><%=user.name%></h1>
                        <p>Admin</p>
                    </div>

                </div>

                <!-- Sidebar Navidation Menus-->
                <ul class="list-unstyled">
                    <li><a href="/admin-dashboard"> <i class="icon-home"></i>Home </a></li>
                    <li><a href="/admin-add_products"> <i class="icon-grid"></i>Add New Product </a></li>
                    <li><a href="/admin-view_All_products"> <i class="icon-interface-windows"></i>View All Product</a>
                    </li>
                    <li class="active"><a href="/view_allOrders"> <i class="fa fa-bar-chart"></i>Order Details/Status
                        </a></li>
                    <li><a href="/admin-view_All_Users"> ðŸ‘¥ View All User</a></li>
                    <li><a href="/me"> <i class="icon-padnote"></i>My Account </a></li>
                </ul>

            </nav>
            <div class="content-inner">
                <!-- Page Header-->
                <header class="page-header">
                    <div class="container-fluid">
                        <h2 class="no-margin-bottom">Dashboard</h2>
                    </div>
                </header>
                <div
                    style="background-color: black;width: 15rem;height: 4rem;display: flex;justify-content: center;align-items: center;">
                    <a style="text-decoration: none;color: white;" href="//view_allOrders">Back to Order Page</a></div>
                <br><br>

                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">OrderId</th>
                            <th scope="col">Transaction Id</th>
                            <th scope="col">User Id</th>
                            <th scope="col">status</th>
                            <th scope="col">Address</th>







                        </tr>
                    </thead>
                    <tbody>
                        <%order.forEach (function(order){%>


                        <tr style="color: black;font-family: 'Crimson Text', serif;font-size: 1rem;">
                            <!-- <th scope="row">i</th> -->
                            <!-- <td></td> -->
                            <td><%=order.id%></td>

                            <td><%=order.paymentId%></td>
                            <td style="font-weight: bold;"><%=order.user._id%></td>



                            <%if(order.status==="orderPlaced" ){%>

                            <td style="font-weight: bold;color: green;">
                                <%=(order.status).toUpperCase()%><i style="font-size: .8rem;color: red;">New</i>
                            </td>

                            <%}%>
                            <%if(order.status==="cancel" ){%>

                            <td style="font-weight: bold;color: red;">
                                <%=(order.status).toUpperCase()%>ED
                            </td>

                            <%}%>
                                <%if(order.status==="delivered" ){%>

                            <td style="font-weight: bold;color: blueviolet;">
                                <%=(order.status).toUpperCase()%><i style="font-size: 1rem; color: blue;"
                                    class="fa fa-check-circle" aria-hidden="true">
                            </td>

                            <%}%>

                            <%if(order.status=== "orderDispatched"){%>
                            <td style="font-weight: bold;color: black;"><%=(order.status).toUpperCase()%></td>
                            <%}%>

<td style="font-size: .95rem;"><%=order.address.city+ ", "+ order.address.state%></td>
                            <!-- <td><a href="/delete-prod/"><button onMouseOver="this.style.color='green'"
                                        onMouseOut="this.style.color='black'" class="" id="" type="submit"><i
                                            class="fa fa-edit"></i></button></a>
                            </td> -->


                        </tr>

                        <%});%>
                    </tbody>
                </table>
                <br><br><br>
                <div style="color: black;margin-bottom: 0;height: 4rem; border-top: 1px solid;" class="row">
                    <div style="margin-top: 3rem;" class="col-sm-6">
                        <p>IndiCraft &copy; 2020</p>
                    </div>
                    <div style="margin-top: 3rem;" class="col-sm-6 text-right">
                        <p>Design by <a href="" class="external">ALOK PURI</a></p>
                    </div>

                </div>
            </div> <!-- Page Footer-->

        </div>


    </div>
    </div>


    <script src="js/bundle.js"></script>
    <script src="jquery.min.js"></script>

</body>


</html>