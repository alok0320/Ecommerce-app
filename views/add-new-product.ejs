            </nav>
            <div class="content-inner">
                <!-- Page Header-->
                <header class="page-header">
                    <div class="container-fluid">
                        <h2 class="no-margin-bottom">Dashboard</h2>
                    </div>
                </header>
                <div
                    style="display:flex;width:100%; align-content: center;margin-left: 10rem; margin-top: 3rem;margin-bottom: 4rem;">
                    <form class="add_new_product">
                        <p class="hidden" id="SuccessAddproduct" style="border:.1rem solid red; width: 80%;"></p>
                        <fieldset>
                            <legend>Add New Product</legend>
                            <br><br>
                            <div class="form-group">
                                <label for="productName">Product Title</label>
                                <input type="text" class="form-control" id="productname" aria-describedby="product"
                                    placeholder="Enter Product Title" required minlength="5">
                            </div>
                            <div class="form-group">
                                <label for="productCategory">Product Category</label>
                                <input type="text" class="form-control" id="productcategory"
                                    aria-describedby="emailHelp" placeholder="Enter Product Category" required>
                            </div>
                            <div class="form-group">
                                <label for="productSubCategory">Product SUBCATEGORY(optional)</label>
                                <input type="text" class="form-control" id="productSubCategory"
                                    aria-describedby="emailHelp" placeholder="Enter Product's SubCategory" required>
                            </div>
                            <div class="form-group">
                                <label for="productQuantity">Selling Price</label>
                                <input type="tel" class="form-control" id="productSellPrice"
                                    aria-describedby="emailHelp" placeholder="AVAILABLE QUANTITY" required>
                            </div>
                            <div class="form-group">
                                <label for="productQuantity">Max Price</label>
                                <input type="tel" class="form-control" id="productMaxPrice" aria-describedby="emailHelp"
                                    placeholder="AVAILABLE QUANTITY" required>
                            </div>
                            <div class="form-group">
                                <label for="productQuantity">AVAILABLE QUANTITY</label>
                                <input type="tel" class="form-control" id="productAvailableQty"
                                    aria-describedby="emailHelp" placeholder="AVAILABLE QUANTITY" required>
                            </div>
                            <div class="form-group">
                                <label for="productweight">PRODUCT WEIGHT</label>
                                <input type="tel" class="form-control" id="productweight" aria-describedby="emailHelp"
                                    placeholder="PRODUCT WEIGHT" required>
                            </div>
                            <div class="form-group">
                                <label for="productQuantity">Delivery Charge</label>
                                <input type="tel" class="form-control" id="deliverycharge" value="â‚¹"
                                    aria-describedby="emailHelp" placeholder="AVAILABLE QUANTITY" required>
                            </div>
                            <div class="form-group">
                                <label for="productDescription">PRODUCT DESCRIPTION</label>
                                <textarea type="textarea" class="form-control" id="productDescription"
                                    aria-describedby="emailHelp" rows="3" placeholder="PRODUCT DESCRIPTION"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="exampleSelect1">Approved By</label>
                                <select class="form-control" id="approvedBy">
                                    <option>Choose</option>
                                    <option>Alok Puri</option>
                                    <option>Shashwat Pratap Singh</option>

                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleSelect1">Enable Display</label>
                                <select class="form-control" id="enableDisplay">
                                    <option>Choose</option>
                                    <option>Yes</option>
                                    <option>No</option>

                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleSelect1">Deal Of Day</label>
                                <select class="form-control" id="dealOfDay">
                                    <option>Yes</option>
                                    <option>No</option>

                                </select>
                            </div>

                            <br>
                            <h4>Tags</h4>
                            <div class="form-group">
                                <label for="exampleSelect1">Tag 1</label><br>
                                <input type="text" id="tag1">

                            </div>
                            <div class="form-group">
                                <label for="exampleSelect1">Tag 2</label><br>
                                <input type="text" id="tag2">

                            </div>
                            <div class="form-group">
                                <label for="exampleSelect1">Tag 3</label><br>
                                <input type="text" id="tag3">

                            </div>
                            <div class="form-group">
                                <label for="exampleSelect1">Tag 4</label><br>
                                <input type="text" id="tag4">

                            </div>


                            <div class="wrap-file" style="display: flex;">
                                <div class="form-group">
                                    <label for="exampleInputFile">Product Image(Thumbnail)</label>
                                    <input type="file" class="form-control-file" id="exampleInputFile"
                                        aria-describedby="fileHelp">
                                    <small id="fileHelp" class="form-text text-muted"></small>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputFile">Product Image(Big)</label>
                                    <input type="file" class="form-control-file" id="exampleInputFile"
                                        aria-describedby="fileHelp">
                                    <small id="fileHelp" class="form-text text-muted">For Product Detail Page.</small>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="submitProduct"
                                    style="padding: 1rem; border-radius: .8rem; background-color: #194342;color: white;border: 1px solid;font-weight: bold;">Add
                                    Product</button>
                                </select>
                            </div>
                    </form>
                </div> <!-- Page Footer-->
