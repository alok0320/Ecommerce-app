            <div class="content-inner">
                <!-- Page Header-->
                <header class="page-header">
                    <div class="container-fluid">
                        <h2 class="no-margin-bottom">Dashboard</h2>
                    </div>
                </header>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col"> User Role</th>
                            <th scope="col"> Name</th>
                            <th scope="col">Email</th>
                            <th scope="col"> Phone</th>
                            <th scope="col">Edit User </th>
                            <th scope="col">Delete User </th>


                        </tr>
                    </thead>
                    <tbody>
                        <%users.forEach (function(users){%>
                        <tr style="color: black;font-size: 1rem;">
                            <!-- <th scope="row">i</th> -->
                            <!-- <td></td> -->
                            <td><%=users._id%></td>
                            <%if(users.role ==="admin"){%>
                            <td style="font-weight: bold; color: chartreuse;font-size: 1rem;">
                                <%=(users.role).toUpperCase()%></td>
                            <%}else{%>
                            <td><%=users.role%></td>
                            <%}%>
                            <%if(users.role ==="admin"){%>
                            <td style="font-weight: bold; color: chartreuse;font-size: 1rem;">
                                <%=(users.name).toUpperCase()%></td>
                            <%}else{%>
                            <td><%=users.name%></td>
                            <%}%>
                            <td><%=users.email%></td>
                            <td><%=users.phone%></td>
                            <%if(users.role !="admin" ){%>
                            <td><button
                                    style="background-color: black;color: white;border: 2px solid;border-radius: .4rem;font-weight: bolder;"
                                    class="<%=users._id%>" type="submit"><i class="fa fa-edit"></i></button></td>
                            <td><button
                                    style="background-color: black;color: white;border: 2px solid;border-radius: .4rem;font-weight: bolder;"
                                    id="<%=users._id%>" type="submit">X</button>
                            </td>
                            <%}%>
                        </tr>


                        <%});%>
                    </tbody>
                </table>

